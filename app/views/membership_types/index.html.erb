<p id="notice"><%= notice %></p>

<h1>Membership Types</h1>

<div class="tooltip"><%= image_tag("help.png", width: '15px') %>Help
  <span class="tooltiptext">
    <p>New Membership Type - create new membership type</p>
    <p>Show - show row specific membership type</p>
    <p>Edit - edit row specific membership type</p>
    <p>Delete - delete row specific membership type</p>
  </span>
</div>

<p><%= link_to '<button id="new">New Membership Type</button>'.html_safe, new_membership_type_path %></p>

<table id="members">
  <thead>
    <tr>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="actions">
    <% @membership_types.each do |membership_type| %>
      <tr>
        <td><%= membership_type.membership_type %></td>
        <td><%= link_to 'Show', membership_type %></td>
        <td><%= link_to 'Edit', edit_membership_type_path(membership_type) %></td>
        <td><%= link_to 'Delete', membership_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% @deleted_types.each do |dt| %>
    <tr style="background-color:lightcoral;">
      <td><%= dt.membership_type %> (INACTIVE)</td>
      <td><%= link_to 'Show', dt %></td>
      <td><%= link_to 'Edit', edit_membership_type_path(dt) %></td>
      <td><%= link_to '<button id="new">Reactivate</button>'.html_safe, reactivate_mt_path(:id => dt.id), method: :post %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>


